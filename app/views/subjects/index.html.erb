<h1 class="text-center">Subjects</h1>

<div class="container">
  <div class="row" >
    <table>
      <thead>
        <tr>
          <th class="col-sm-offset-1 col-sm-2">Title</th>
          <th class="col-sm-2">Description</th>
          <th class="col-sm-2">Participant</th>
          <th class="col-sm-2">subject</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @subjects.each do |subject| %>
          <tr>
            <td class="col-sm-offset-1 col-sm-2"><%= subject.title %></td>
            <td class="col-sm-2"><%= subject.description %></td>
            <td class="col-sm-2"><%= subject.questioner.try(:name) %></td>
            <td class="col-sm-2"><%= subject.conference.title %></td>
            <td class="col-sm-1"></td>
            <td class="col-sm-2 text-center"><%= link_to 'Show', subject %> | <%= link_to 'Edit', edit_subject_path(subject)%> | <%= link_to 'Destroy', subject, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<br>

<div class="text-center">
  <td><%= link_to 'New Subject', new_subject_path %> |</td>
  <td><%= link_to 'Home', root_path %></td>
</div>
